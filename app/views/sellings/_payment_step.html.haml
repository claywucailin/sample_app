  .info-content
    .details
      %table
        %tr.event_color
          %td.singer
            = f.object.event.title
          %td{:style => "width:200px"}
            = image_tag "small_calendar.png"
            = f.object.event.start_time.try(:to_date) 
          %td{:style => "width:340px"}
            = image_tag "little_location.png"
            = f.object.event.venue.name
        %tr
          %td
            /= t('.list_price', price: f.object.list_price)
            出售价格:
            %span.pay_reward_color 2000￥
          %td.getReward
            /= t('.net_price', price: f.object.net_price)
