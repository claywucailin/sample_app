            %span.pay_reward_color 500￥
          %td
        %tr
          %td
        %tr
          %td
        %tr
          %td{:style => "border-bottom:1px solid #b1b1b1;margin-top:200px;"}
          %td{:style => "border-bottom:1px solid #b1b1b1;margin-top:200px;"}
    .main-info
      .association-method.readonly
        %p 联系方式
