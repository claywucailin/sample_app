                .check-ticket-link
                  = link_to "查看门票"
              %li
                .list-type-icon-02
                .my-favorite-activity-intro
                  .activity-title "xxx美术馆双年展 2013.06.31"
                .check-ticket-link= link_to "查看门票"
    .gray-separate-line
    .manage-orders-container
      .manage-orders-header
        .header 订单管理
        .manage-orders-operations
          %ul.operations
            %li.active
              = link_to "我的订单"
            %li.gray-separate-line
